<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#7EC239"
    android:layout_height="120dp"
    android:layout_marginBottom="1dp"
    android:clickable="true"
    android:paddingBottom="@dimen/calendarTitlePaddingBottom"
    android:paddingTop="@dimen/calendarTitlePaddingTop">



    <TextView android:id="@+id/date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:textColor="#ffffff"
        android:textSize="25sp"

        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="false"
       android:layout_marginTop="15dp"
        android:tag="dateTitle"
        tools:text="MONTH 2014"/>
    <TextView android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_title"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="false"
        android:tag="dateTitle"
        tools:text="2017"/>

    <ImageView android:id="@+id/left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/date_title"
        android:layout_alignParentTop="false"
        android:layout_marginTop="10dp"
        android:padding="@dimen/padding"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
        tools:ignore="contentDescription"/>

    <ImageView android:id="@+id/right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/date_title"
        android:layout_alignParentTop="false"
        android:padding="@dimen/padding"
        android:layout_marginTop="10dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        tools:ignore="contentDescription"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="26dp"

        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_below="@+id/year"
        android:text="+ ADD"
        android:background="@drawable/dess"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>